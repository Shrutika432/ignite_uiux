<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ambulence">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ImageCreateEventPost"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/ambulance">

            </ImageView>

            <TextView
                android:id="@+id/TextCreateEvent"
                android:layout_width="400dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="Ambulance Numbers List "
                android:textAlignment="center"
                android:textColor="@color/heading"
                android:textSize="25dp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="9999988888"
                android:textColor="@color/btn"
                android:padding="6dp"
                android:background="@drawable/login_textformat"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="sans">

            </TextView>




            <TextView
                android:id="@+id/EventDis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginRight="20dp"
                android:padding="6dp"
                android:background="@drawable/login_textformat"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="8888888888"
                android:textColor="@color/btn"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="sans">

            </TextView>


            <TextView
                android:id="@+id/Nov"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="9898989898"
                android:background="@drawable/login_textformat"
                android:textColor="@color/btn"
                android:textSize="14sp"
                android:padding="6dp"
                android:textStyle="bold"
                android:typeface="sans">

            </TextView>

            <TextView
                android:id="@+id/des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="999999999"
                android:background="@drawable/login_textformat"
                android:textColor="@color/btn"
                android:textSize="14sp"
                android:padding="6dp"
                android:textStyle="bold"
                android:typeface="sans">

            </TextView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>